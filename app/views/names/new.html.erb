<h1>New name</h1>

<% form_for([@language, @name]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :script %><br />
    <%= f.text_field :script %>
  </p>
  <p>
    <%= f.label :latin %><br />
    <%= f.text_field :latin %>
  </p>
  <p>
    <%= f.label :normalized %><br />
    <%= f.text_field :normalized %>
 </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', language_names_path(@language) %> 
